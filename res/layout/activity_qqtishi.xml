<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FB"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_tishi_hao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="329150185"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list_tishi_hao"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="恭喜你,成功注册!"
        android:textSize="25sp" />

    <Button
        android:id="@+id/list_tishi_loginbtn"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/list_tishi_hao"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_sendmsg"
        android:text="点击登录"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>