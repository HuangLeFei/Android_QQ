<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/list_layouts_linear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/list_xiaoxi_img"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:onClick="xiaoxionclick"
            android:src="@drawable/skin_tab_icon_conversation_selected" />

        <ImageView
            android:id="@+id/list_lianxiren_img"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:onClick="lianxirenonclick"
            android:src="@drawable/skin_tab_icon_contact_normal" />

        <ImageView
            android:id="@+id/list_dongtai_img"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:onClick="dongtaionclick"
            android:src="@drawable/skin_tab_icon_plugin_normal" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/list_qq_layoutrel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/list_layouts_linear" >
    </RelativeLayout>

</RelativeLayout>