<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    
    <com.ht.qq.imageview.CircleImageView
     android:id="@+id/qq_ico"
     android:layout_width="45dp"
     android:layout_height="45dp"
     android:src="@drawable/gco"/>
    
    <TextView 
     android:id="@+id/qq_textname"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="黄乐飞"
     android:textSize="17sp"
     android:textColor="#000000"
     android:layout_marginLeft="10dp"
     android:layout_alignTop="@id/qq_ico"
     android:layout_toRightOf="@id/qq_ico"/>
    
    <TextView 
     android:id="@+id/qq_text2shuoming"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="[在线]这真是一个好主意!!!"
     android:singleLine="true"
     android:textSize="13sp"
     android:textColor="#8C8C8C"
     android:layout_alignBottom="@id/qq_ico"
     android:layout_alignLeft="@id/qq_textname"
     />

</RelativeLayout>
